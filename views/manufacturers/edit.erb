        <input id="name-input" type="text" name="name" value="<%= @manufacturer.name %>"/>

    <label for="hq-input">Manufacturer Hq: </label>
        <input id="hq-input" type="text" name="hq" value="<%= @manufacturer.hq %>"/>

    <label for="tel_no-input">Manufacturer Telephone Number: </label>
        <input id="tel_no-input" type="text" name="tel_no" value="<%= @manufacturer.tel_no %>"/>

    <input class="btn btn-show" type="submit" value="Edit Manufacturer"/>
</form>
